
<%= form_for(@meeting) do |f| %>
  <% if @meeting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@meeting.errors.count, "error") %> prohibited this test from being saved:</h2>

      <ul>
      <% @meeting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category, "Kategorie" %><br>
    <%= f.select :category, ["Termin", "Wiedervorlage"] %>
  </div>

  <div class="field">
    <%= f.label :name, "Name" %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description, "Beschreibung" %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :Teilnehmer %><br>
    <%= f.grouped_collection_select :contactpsn_id, Contact.order(:name),
          :contactpsns, :name, :id, :full_name, prompt: "Bitte wählen"%>
  </div>

  <div class="field">
    <%= f.label :Teilnehmer %><br>
    <%= f.text_field :name, prompt: "Bitte wählen"%>
  </div>


  <div class="field">
    <%= f.label :date, "Datum" %><%= " (Bitte in das Feld klicken)" %><br>
    <%= f.text_field :date %><br>
  </div>

  <div class="field">
    <%= f.label :time_of_meeting, "Uhrzeit" %><br>
    <%= f.text_field :time_of_meeting %>
    <br>
    <%= "Bitte Zeit eintragen. zB.(09:00)" %>
  </div>


  <div class="actions">
    <%= f.submit "Termin erstellen"%>
  </div>
<% end %>
