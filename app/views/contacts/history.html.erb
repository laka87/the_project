
<div id="container" >
<h1>Detailtabelle für alle Kontakte</h1>

<table id="histories" class="display" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Kontakt</th>
      <th>Erstellt von</th>
      <th>Erstelldatum</th>
    </tr>
  </thead>

<tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td ><%= contact.contact_name %></td>
        <td ><%= contact.user.full_name %></td>
        <td ><%= contact.created_at.strftime("[%d.%m.%y] um [%H:%M:%S]") %></td>
         </tr>
<% end %>
  </tbody>
</table>

<br>

<%= link_to 'Zurück zum Dashboard', home_path, :class => "btn btn-default" %>
</div>
