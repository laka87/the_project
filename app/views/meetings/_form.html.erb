
<%= form_for @meeting do |f| %>
  <% if @meeting.errors.any? %>
    <div id="error_explanation">
      <h2><%= @meeting.errors.count%> Fehler verhindern das Speichern:</h2>

      <ul>
      <% @meeting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :meeting_name, "Name" %><br>
    <%= f.text_field :meeting_name %>
  </div>

  <div class="field">
    <%= f.label :description, "Beschreibung" %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :contact_title, "Teilnehmer" %><%= "(bitte eingeben)" %><br>
    <%= f.text_field :contact_title , data: {autocomplete_source: autocomplete_path} %>
  </div>


  <div class="field">
    <%= f.label :date, "Datum" %><%= " (Bitte in das Feld klicken)" %><br>
    <%= f.text_field :date %><br>
  </div>

  <div class="field">
    <%= f.label :time_of_meeting, "Uhrzeit" %><br>
    <%= f.text_field :time_of_meeting %>
    <br>
    <%= "Bitte Zeit eintragen. zB.(09:00)" %>
  </div>


  <div class="actions">
    <%= f.submit "Termin erstellen"%>
  </div>
<% end %>
