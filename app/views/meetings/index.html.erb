<div id="container" >
<p id="notice"><%= notice %></p>

<h1>Alle Meetings</h1>

<%= link_to 'Zurück zum Dashboard', home_path, :class => "btn btn-default" %>
</br>
</br>
<div id="tables">
<table>
  <thead>
<th colspan="1" ><%= link_to 'Neues Meeting', new_meeting_path, :class => "btn btn-success" %></th>
<th colspan="7" >

<%= form_tag meetings_path, :method => :get do %>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "suchen", :name => nil, :class => "btn btn-success" %>
<% end %></th>

<tr>
      <th colspan="1">Name</th>
      <th colspan="1">Datum</th>
      <th>Typ</th>
      <th>Teilnehmer</th>
      <th>von Kontakt</th>
      <th colspan="3">Optionen</th>
      <tr>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
    <% if current_user == meeting.user %>
      <tr>
        <td ><%= meeting.name %></td>
        <td ><%= meeting.date.strftime("%d.%m.%y") %></td>
        <td align="center"><%= meeting.category %></td>
        <% if meeting.contactpsn.nil? %>
        <td align="center"><%= "Person gelöscht" %></td>
        <td align="center"><%= "Keine Referenz" %></td>
        <% else %>
        <td align="center" colspan="1"><%= meeting.contactpsn.full_name %></td>
        <td align="center" colspan="1"><%= meeting.contactpsn.contact.name %></td>
        <% end %>
        <td ><%= link_to meeting, 'data-no-turbolink' => true do %>
        <i style="opacity: 0.5;" class="fa fa-eye" ></i><% end %></td>

        <td><%= link_to edit_meeting_path(meeting) do %>
        <i style="opacity: 0.5;" class="fa fa-edit"></i><% end %></td>

        <td><%= link_to meeting, method: :delete, data: { confirm: 'Sind sie Sicher?' } do %>
        <i style="opacity: 0.5;" class="fa fa-trash"></i><% end %></td>
        <% end %>
      </tr>

  <% end %>
  </tbody>
</table>


<br>

<%= link_to 'Zurück zum Dashboard', home_path, :class => "btn btn-default" %>
</div>
</div>
